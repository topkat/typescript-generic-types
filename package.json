{
  "name": "typescript-generic-types",
  "version": "1.0.15",
  "description": "A comprehensive collection of useful TypeScript generic types and utility types to enhance type-safety and developer experience. Includes array, promise, object manipulation, and advanced conditional types.",
  "main": "index.js",
  "types": "index.ts",
  "scripts": {
    "bump": "yarn build && bump --patch",
    "bump:patch": "yarn build && bump --patch",
    "bump:minor": "yarn build && bump --minor",
    "bump:major": "yarn build && bump --major",
    "build": "ts-node generateClassicExports.ts",
    "preversion": "npm run build"
  },
  "keywords": [
    "typescript",
    "types",
    "generics",
    "utility-types",
    "type-safety",
    "typescript-utils",
    "typescript-helpers",
    "type-definitions",
    "typescript-generics",
    "type-manipulation",
    "conditional-types",
    "mapped-types",
    "typescript-toolbox",
    "type-guards",
    "type-inference"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topkat/typescript-generic-types.git"
  },
  "bugs": {
    "url": "https://github.com/topkat/typescript-generic-types/issues"
  },
  "homepage": "https://github.com/topkat/typescript-generic-types#readme",
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "bump-simple": "^1.0.29",
    "typescript": "^5.3.3"
  },
  "files": [
    "*.ts",
    "*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
